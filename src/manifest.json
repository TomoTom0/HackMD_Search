{
  "name": "HackMD Search",
  "description": "You can search texts in HackMD and download stored notes even offline.",
  "version": "0.3.0.0",
  "manifest_version": 2,
  "icons":{"48":"img/icon_48dp.png"},
  "content_scripts": [{
    "matches": ["https://hackmd.io/*"],
    "js": ["js/jquery-3.5.1.min.js", "script/content_script.js"]
  }],
  "permissions":["storage", "unlimitedStorage", "clipboardRead"],
  "web_accessible_resources":[""],
  "options_ui": {
    "page": "script/options.html",
    "open_in_tab": true
  }
}
